PATH="$HOME/.local/bin:$PATH"

# Python env
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
export PATH="$HOME/.poetry/bin:$PATH"

# Go stuff
go env -w GOPATH=$HOME/go
export PATH="$PATH:$(go env GOPATH)/bin"

# load secrets
source .secrets
