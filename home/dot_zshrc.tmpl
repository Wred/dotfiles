# some script calls in binds on tmux need PATH envs.  We'll need to 
# include those before we start tmux

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# check if parent isn't a tmux session or windsurf, then start 
tmux_run() {
	parent_process=$(ps -p $PPID -o comm=)

	if [[ "$parent_process" != "windsurf" ]]; then
		if [ -z "$TMUX" ]; then
			tmux new -s home
		fi
	fi
}
tmux_run

